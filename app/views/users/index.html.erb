<!-- app/views/users/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Usuarios</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">
  <div class="container mx-auto">
    <h1 class="text-2xl font-bold mb-4">Lista de Usuarios</h1>
    <% if flash[:error] %>
      <div class="bg-red-500 text-white p-4 mb-4 rounded">
        <%= flash[:error] %>
      </div>
    <% end %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @users.each do |user| %>
        <div class="bg-white p-4 rounded-lg shadow">
          <h2 class="text-xl font-semibold mb-2"><%= "#{user['first_name']} #{user['last_name']}" %></h2>
          <p class="text-gray-700"><strong>Email:</strong> <%= user['email'] %></p>
          <p class="text-gray-700"><strong>Fecha de Nacimiento:</strong> <%= user['date_of_birth'] %></p>
          <p class="text-gray-700"><strong>Dirección:</strong> <%= user['address'] %></p>
          <p class="text-gray-700"><strong>País:</strong> <%= user['country'] %></p>
          <p class="text-gray-700"><strong>Bio:</strong> <%= user['bio'] %></p>
          <p class="text-gray-700"><strong>Rating:</strong> <%= user['rating'] %></p>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
